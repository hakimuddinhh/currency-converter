{
    "manifest_version": 2,
    "name": "Currency Converter",
    "description": "Currency Converter lets you select and convert 33 of the world currencies. ",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": [
                "http://oracle.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": { 
        "16": "logo_16.png",
        "48": "logo_48.png",
       "128": "logo_128.png" },
    "browser_action": {
        "default_icon": "logo_128.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "contextMenus",
        "storage",
        "tabs",
        "notifications",
        "<all_urls>"
    ]
}